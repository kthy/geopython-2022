root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = off
trim_trailing_whitespace = true

[*.{bat,cmd,ps1}]
end_of_line = crlf

[*.md]
indent_size = 4
max_line_length = 120
trim_trailing_whitespace = false

[*.py]
indent_size = 4
max_line_length = 99

[*_authorized_keys]
insert_final_newline = false

[*.{html,svg,xml}]
insert_final_newline = false
